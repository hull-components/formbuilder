<form role="form" data-hull-form-namespace="{{formNamespace}}">
  {{#form}}
  <h1>{{name}}</h1>
  <p>{{description}}</p>
  {{/form}}

  {{#each fields}}
    <div class="{{#ifEqual field_type "checkboxes"}}checkkbox{{else}}form-group{{/ifEqual}}" data-hull-field-name="{{name}}">
      <label for="{{input_id}}">
        {{label}}{{#if required}}*{{/if}}
      </label>
      {{{markup}}}
      {{#if field_options.description}}
      <p class="help-block">{{field_options.description}}</p>
      {{/if}}
    </div>
  {{/each}}

  <div>
    {{#if options.skipButton}}
    <button class="btn btn-info pull-right" data-hull-action="skip">Skip</button>
    {{/if}}

    {{#if isAdmin}}
    <a href="#" class="btn pull-right" data-hull-action="edit">Edit Fields</a>
    {{/if}}

    <button class="btn btn-primary" type="submit" >Save</button>
    
    {{#if options.resetButton}}
    <button class="btn btn-danger" data-hull-action="reset">Reset</button>
    {{/if}}    
  </div>
</form>
